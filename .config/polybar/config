modules-left = ewmh
modules-right = pavolume networkspeeddown networkspeedup memory swap filesystem cpu date

tray-detached = false
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 2
tray-maxsize = 20
tray-scale = 1.0
tray-background = ${colors.background}

